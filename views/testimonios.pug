extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}
        
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias con nosotros
        include ./layout/bloque_testimonios

        .row

            h2.d-block.w-100.text-center Agrega tu Testimonio

            .col-md-12
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimonios" method="POST")
                        .form-group 
                            label(for="nombre") Nombre
                            input(type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre" aria-describedby="helpId", value=nombre)

                        .form-group
                            label(for="correo") Correo
                            input(type="email" name="correo" id="correo" class="form-control" placeholder="Correo" aria-describedby="helpId", value=correo)

                        .form-group
                            label(for="mensaje") Mensaje
                            textarea(name="mensaje" id="mensaje" class="form-control" rows="3" placeholder="Mensaje")=mensaje

                        input.btn.btn-success.btn-block(type="submit" value="Enviar")